        document.addEventListener('DOMContentLoaded', () => {
            const tabsContainer = document.getElementById('tabs');
            const contentContainer = document.getElementById('tab-content');
            let activeTab = appData.tabs[0].id;

            function render() {
                tabsContainer.innerHTML = appData.tabs.map(tab => `
                    <button data-tab-id="${tab.id}" class="tab-button text-sm sm:text-base font-semibold py-2 px-4 rounded-t-lg transition-colors duration-300 ${activeTab === tab.id ? 'tab-active' : 'tab-inactive'}">
                        ${tab.title}
                    </button>
                `).join('');

                contentContainer.innerHTML = appData.tabs.map(tab => {
                    const contentData = appData.content[tab.id];
                    return `
                        <div id="${tab.id}" class="tab-pane ${activeTab === tab.id ? '' : 'hidden'}">
                            <div class="content-card p-6 md:p-8">
                                <h2 class="text-2xl md:text-3xl font-bold mb-4 text-stone-700">${contentData.title}</h2>
                                <p class="text-stone-600 mb-8">${contentData.intro}</p>
                                <div class="space-y-8">
                                    ${contentData.sections.map((section, index) => `
                                        <article>
                                            <h3 class="technique-card text-xl font-semibold text-stone-700 p-4 rounded-lg bg-stone-50 hover:bg-stone-100" data-pane-id="${tab.id}-${index}">
                                                ${section.title}
                                            </h3>
                                            <div id="${tab.id}-${index}" class="details-pane px-4 text-stone-600">
                                                ${section.content}
                                            </div>
                                        </article>
                                    `).join('')}
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');

                addEventListeners();
                if (activeTab === 'foundation') {
                    initForgettingCurveChart();
                    initPomodoro();
                }
            }

            function addEventListeners() {
                document.querySelectorAll('.tab-button').forEach(button => {
                    button.addEventListener('click', () => {
                        activeTab = button.dataset.tabId;
                        render();
                    });
                });

                document.querySelectorAll('.technique-card').forEach(card => {
                    card.addEventListener('click', () => {
                        const paneId = card.dataset.paneId;
                        const pane = document.getElementById(paneId);
                        pane.classList.toggle('open');
                    });
                });
            }
            
            function initForgettingCurveChart() {
                const ctx = document.getElementById('forgettingCurveChart')?.getContext('2d');
                if (!ctx) return;

                const labels = ['ุงูุชุนูู ุงูุฃููู', '20 ุฏูููุฉ', 'ุณุงุนุฉ ูุงุญุฏุฉ', '9 ุณุงุนุงุช', 'ููู ูุงุญุฏ', 'ูููุงู', '6 ุฃูุงู'];
                const dataNoRepetition = [100, 58, 44, 36, 33, 28, 25];
                const dataWithRepetition = [100, 100, 95, 90, 88, 85, 82];

                const chart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'ุจุฏูู ุชูุฑุงุฑ',
                                data: dataNoRepetition,
                                borderColor: '#EF4444', // red-500
                                backgroundColor: 'rgba(239, 68, 68, 0.1)',
                                tension: 0.1,
                                fill: true,
                            },
                            {
                                label: 'ูุน ุงูุชูุฑุงุฑ ุงููุชุจุงุนุฏ',
                                data: dataWithRepetition,
                                borderColor: '#22C55E', // green-500
                                backgroundColor: 'rgba(34, 197, 94, 0.1)',
                                tension: 0.1,
                                fill: true,
                                hidden: true,
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            title: {
                                display: true,
                                text: 'ููุญูู ุงููุณูุงู ูุชุฃุซูุฑ ุงูุชูุฑุงุฑ ุงููุชุจุงุนุฏ'
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return `${context.dataset.label}: ${context.parsed.y}% ูุญุชูุธ ุจู`;
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                ticks: {
                                    callback: function(value) {
                                        return value + '%';
                                    }
                                }
                            }
                        }
                    }
                });

                document.getElementById('toggleRepetition')?.addEventListener('click', () => {
                    const isHidden = chart.isDatasetVisible(1);
                    chart.setDatasetVisibility(1, !isHidden);
                    chart.update();
                });
            }

            function initPomodoro() {
                const timerDisplay = document.getElementById('pomodoro-timer');
                const startBtn = document.getElementById('pomodoro-start');
                const pauseBtn = document.getElementById('pomodoro-pause');
                const resetBtn = document.getElementById('pomodoro-reset');
                
                if(!timerDisplay) return;

                let countdown;
                let timeLeft = 25 * 60;
                let isPaused = true;

                function updateDisplay() {
                    const minutes = Math.floor(timeLeft / 60);
                    let seconds = timeLeft % 60;
                    seconds = seconds < 10 ? '0' + seconds : seconds;
                    timerDisplay.textContent = `${minutes}:${seconds}`;
                }

                function timer() {
                    if (isPaused) return;
                    timeLeft--;
                    updateDisplay();
                    if (timeLeft <= 0) {
                        clearInterval(countdown);
                        alert('ุงูุชูู ุงูููุช! ุฎุฐ ุงุณุชุฑุงุญุฉ ูุตูุฑุฉ.');
                    }
                }

                startBtn.addEventListener('click', () => {
                    if (isPaused) {
                        isPaused = false;
                        countdown = setInterval(timer, 1000);
                        startBtn.textContent = 'ุงุณุชุฆูุงู';
                    }
                });

                pauseBtn.addEventListener('click', () => {
                    isPaused = true;
                    clearInterval(countdown);
                });

                resetBtn.addEventListener('click', () => {
                    isPaused = true;
                    clearInterval(countdown);
                    timeLeft = 25 * 60;
                    updateDisplay();
                    startBtn.textContent = 'ุงุจุฏุฃ';
                });

                updateDisplay();
            }

            render();
        });
    </script>
</body>
</html>
